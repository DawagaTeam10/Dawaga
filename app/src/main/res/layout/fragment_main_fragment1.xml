<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#69E36B"
    android:id="@+id/main1">

    <LinearLayout
        android:id="@+id/fragment1_linear1"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_year1"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021년"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_month1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5월"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_day1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20일"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핀테크 약속 마감시간까지"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/fragment1_linear2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_leftYear1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1년"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_leftDay1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14일"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_leftTime1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:text="1시간"
            android:layout_gravity="center"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_leftMin1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:text="30분"
            android:layout_gravity="center"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_leftSec1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:text="59초 남았습니다."
            android:layout_gravity="center"
            android:visibility="visible"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_infoGone1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약속이 종료되었습니다."
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:visibility="invisible">
    </TextView>

</LinearLayout>